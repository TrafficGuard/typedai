#!/bin/bash

# Count tokens in text input
# Usage: tokenCount "text to count"
#        echo "some text" | tokenCount
#        exportToXml path1 path2 | tokenCount

if [ -z "$TYPEDAI_HOME" ]; then
  echo "Error: TYPEDAI_HOME is not set."
  exit 1
fi

CWD=$(pwd)

(
  cd "$TYPEDAI_HOME"
  LOG_LEVEL=fatal pnpm run tokens -- --fs="${CWD}" "$@"
)
