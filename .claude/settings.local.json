{
  "permissions": {
  "allow": [
    "Bash(ls:*)",
    "Bash(cat:*)",
    "Bash(echo:*)",
    "Bash(grep:*)",
    "Bash(chmod:*)",
    "Bash(node --version)",

    "Bash(pnpm run build:*)",

    "Bash(npm test:*)",
    "Bash(pnpm test:*)",
    "Bash(pnpm test:unit:*)",
    "Bash(pnpm run test:unit:*)",
    "Bash(pnpm run test:single:*)",
    "Bash(timeout 30 pnpm test:single:*)",
    "Bash(pnpm run test:postgres:*)",

    "Bash(pnpm lint:*)",
    "Bash(pnpm run lint:*)",

    "Bash(pnpm summaries build:*)",
    "Bash(pnpm summaries:*)",

    "mcp__ide__getDiagnostics",

    "WebSearch",
    "WebFetch(domain:github.com)",
    "WebFetch(domain:docs.cloud.google.com)",
    "mcp__perplexity__search"
  ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/ensure-pnpm-check.sh"
          }
        ]
      }
    ]
  }
}
